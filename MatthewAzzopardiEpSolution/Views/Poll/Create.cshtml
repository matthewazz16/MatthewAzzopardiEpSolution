@model MatthewEpSol.domain.Poll

<h2>Create a New Poll</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Option1Text"></label>
        <input asp-for="Option1Text" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Option2Text"></label>
        <input asp-for="Option2Text" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Option3Text"></label>
        <input asp-for="Option3Text" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary mt-3">Create Poll</button>
</form>
